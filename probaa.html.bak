<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Autók</title>
</head>
<body>
    <h1>Autók</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Modell</th>
                <th>Gyártó</th>
                <th>Évjárat</th>
                <!-- Itt folytathatod az egyéb oszlopok definiálását -->
            </tr>
        </thead>
        <tbody id="car-list">
            <!-- Itt jelenítsd meg dinamikusan az autók adatait -->
        </tbody>
    </table>

    <script>
        // Fetch API segítségével kérjük le az autókat az API-tól
        fetch('api/Car/GetCars')
            .then(response => response.json())
            .then(data => {
                const carList = document.getElementById('car-list');
                data.forEach(car => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${car.id}</td>
                        <td>${car.model}</td>
                        <td>${car.manufacturer}</td>
                        <td>${car.year}</td>
                        <!-- Itt folytathatod az egyéb oszlopok feltöltését -->
                    `;
                    carList.appendChild(row);
                });
            })
            .catch(error => console.error('Hiba történt:', error));
    </script>
</body>
</html>
