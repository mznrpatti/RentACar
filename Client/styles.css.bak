body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f0f0;
}

h1 {
    text-align: center;
    margin-top: 20px;
    color: #333;
}

#car-table {
    width: 80%;
    margin: 20px auto;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

#car-table th, #car-table td {
    padding: 10px;
    border-bottom: 1px solid #ddd;
}

#car-table th {
    background-color: #f2f2f2;
    text-align: left;
    font-weight: bold;
    color: #333;
}

#car-table tbody tr:hover {
    background-color: #f9f9f9;
}

.bg-image-vertical {
position: relative;
overflow: hidden;
background-repeat: no-repeat;
background-position: right center;
background-size: auto 100%;
}

@media (min-width: 1025px) {
.h-custom-2 {
height: 100%;
}
}

.car-image {
    position: fixed;
    top: 100%;
    right: -100px; /* Jobboldalon kezdőpozíció */
    transform: translateY(-70%);
    transition: right 1s ease; /* Animáció a pozícióváltáshoz */
    z-index: 1000; /* A kép a legfelső rétegben legyen */
}

